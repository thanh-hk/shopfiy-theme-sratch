{%  schema  %} 
{
    "name":"Header",
    "class": "sticky top-0 border-b bg-white header z-30",  
     "tag": "header",
    "settings": [
        {
        "type": "checkbox",
        "id": "show_cart",
        "label": "Show cart",
        "default": true
      },
      {
        "type": "header",
        "content": "Logo"
     },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Image",
      "info": "280 x 80px .png recommended"  
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 40,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo with on desktop",
      "default": 140   
    },
    {
      "type": "range",
      "id": "logo_mobile_max_width",
      "min": 40,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Logo with on mobile",
      "default": 80   
    },
    {
        "type":"link_list", 
        "id":"navigation",
        "label" :"Navigation menu",
        "default": "main-menu"  
    }    
  ],
  "blocks": [
    {
      "type": "promotion-block",
      "name": "Promotion block",
      "settings": [
      {
          "type": "checkbox",
          "id": "show_on_mobile",
          "label": "Show on mobile"
        },
        {
          "type": "text",
          "id": "link_name",
          "label": "Link name",
          "info" : "Need to have same name with main menu item"
        },
        {
          "type": "image_picker",
          "id": "box_image",
          "label": "Image",
          "info": "280 x 80px .png recommended"  
        },
        {
          "type": "text",
          "id": "title",
          "label": "Box text"
        },
        {
          "type": "url",
          "id": "box_link",
          "label": "Box link"
        }
      ]
    }
  ]
}
 {% endschema %} 

