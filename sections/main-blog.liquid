<div class="section-id-{{ section.id }} py-[--section-top_bottom_padding]">
    {% paginate blog.articles by 12 %}    
    <div class="container  mx-auto px-4 ">
    <div class="flex flex-col gap-2 mb-3">
        {% if section.settings.title != blank %}
            <h1> {{ section.settings.title }}</h1>            
        {% else %}
            <h1> {{ blog.title }} </h1>
        {% endif %}
        <div>{{ section.settings.text }}</div>
    </div>                    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5"> 
        {% for article in blog.articles %}
            {%  render 'article-card', article: article,  %}
        {% endfor %}
    </div>
</div>
<div class="flex justify-center text-sm gap-5 mt-6">{{ paginate | default_pagination }}</div>  
{% endpaginate %}
</div>
{%  schema  %}  
    {
        "name" :"Blogs",
        "class" :"section-blogs",
        "templates": [
            "blog"
        ],
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Heading",
                "default": "Blog posts"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Heading",
                "default": "<p>Type your text here </p>"
            },
            {
                "type": "blog",
                "id":"blogs",
                "label":"Blogs"
            },
            {
                "type": "checkbox",
                "id":"show_date",
                "label": "Show date",
                "default": true
            },
            {
                "type": "checkbox",
                "id":"show_author",
                "label": "Show author"
            }
        ],
        "presets": [
            {
                "name":"Blogs"
            }
        ]
    }
{%  endschema  %}  